
@{
    ViewBag.Title = Model.Baslik;
}
@model  BetulBlogSiteDotNet.Models.Makale
    <h3>@Model.Baslik</h3>
    <div class="blog-meta big-meta">
        <small><a href="tech-single.html" title="">@Model.EklenmeTarihi</a></small>
        <small><a href="tech-author.html" title="">@Model.Yazar</a></small>
        <small><a href="#" title=""><i class="fa fa-eye"></i>@Model.Begeni</a></small>
    </div>
    <div class="single-post-media">
        <img src="upload/tech_menu_08.jpg" alt="" class="img-fluid">
    </div>
    <p>@Model.Icerik</p> <hr class="invis1">
    <div class="custombox authorbox clearfix">
        <h4 class="small-title">@Model.Yazar.Aciklama</h4>
        <div class="row">
            <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12">
                <img src="/Content/YazarResim/Biz.jpg" alt="" class="img-fluid rounded-circle">
            </div><!-- end col -->

            <div class="col-lg-10 col-md-10 col-sm-10 col-xs-12">
                <h4><a href="#">@Model.Yazar.Adi @Model.Yazar.Soyadi Hakkında</a></h4>
                <p>@Model.Yazar.Aciklama</p>
                <div class="topsocial">
                    <a href="#" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="Facebook"><i class="fa fa-facebook"></i></a>
                    <a href="#" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="Youtube"><i class="fa fa-youtube"></i></a>
                    <a href="#" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="Pinterest"><i class="fa fa-pinterest"></i></a>
                    <a href="#" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="Twitter"><i class="fa fa-twitter"></i></a>
                    <a href="#" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="Instagram"><i class="fa fa-instagram"></i></a>
                    <a href="#" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="Website"><i class="fa fa-link"></i></a>
                </div><!-- end social -->

            </div><!-- end col -->
        </div><!-- end row -->
    </div>
    <div class="custombox clearfix">
        <h4 class="small-title">@Model.Yorum.Count Yorum </h4>
        <div class="row">
            <div class="col-lg-12">
                <div class="comments-list">
                    @foreach (BetulBlogSiteDotNet.Models.Yorum yorum in Model.Yorum)
                    {
                    <div class="media">
                        <a class="media-left" href="#">
                            <img src="/Content/image/profil.jpg" alt="" class="rounded-circle">
                        </a>
                        <div class="media-body">
                            <h4 class="media-heading user_name">@yorum.AdSoyad <small>@yorum.EklenmeTarihi.Value.ToShortDateString()</small></h4>
                            <p>@yorum.Yorum1</p>
                            <a href="#" class="btn btn-primary btn-sm">Reply</a>
                        </div>
                    </div>
                    }
                </div>
            </div>
        </div>

                </div>
    <h4 class="small-title">Cevaplamak İstermisiniz...</h4>
                <div class="row">
                    <div class="col-lg-12">
                        <form class="form-wrapper" action="/Makale/YorumYaz/@Model.MakaleId" method="post">
                            <input type="text" class="form-control" placeholder="İsim">
                            <input type="text" class="form-control" placeholder="Email">
                            <input type="text" class="form-control" placeholder="Website">
                            <textarea class="form-control" placeholder="Yorumunuz"></textarea>
                            <button type="submit" class="btn btn-primary">Gönder</button>
                        </form>
                    </div>
                </div>
