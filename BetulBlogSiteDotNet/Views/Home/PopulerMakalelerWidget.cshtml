@model IEnumerable<BetulBlogSiteDotNet.Models.Makale>


<div class="widget">
    <h2 class="widget-title">Popular Posts</h2>
    <div class="blog-list-widget">
        <div class="list-group">

            @foreach (BetulBlogSiteDotNet.Models.Makale makale in Model)
            {
                <a href="/Makale/Detay/@makale.MakaleId" class="list-group-item list-group-item-action flex-column align-items-start">
                    <div class="w-100 justify-content-between">
                        <img src="upload/tech_blog_08.jpg" alt="" class="img-fluid float-left">
                        <h5 class="mb-1">@makale.Baslik</h5>
                        <small>@makale.EklenmeTarihi.ToShortDateString()</small>
                    </div>
                </a>
            }

           </div>
            
    </div><!-- end blog-list -->
</div><!-- end widget -->